{
    "manifest_version": 2,
    "name": "Betterflix",
    "version": "1.0",

    "description": "Improves Netflix UI",

    "icons": {

    },

    "content_scripts": [
        {
            "matches": ["https://www.netflix.com/browse", "https://www.netflix.com/browse/*", "https://www.netflix.com/browse?*", "https://www.netflix.com/watch/*"],
            "js": ["betterflix.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "<all_urls>"
    ],

    "applications": {
        "gecko": {
            "id": "betterflix@jellywx.com"
        }
    }
}