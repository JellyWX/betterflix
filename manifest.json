{
    "manifest_version": 2,
    "name": "Betterflix",
    "version": "1.0",

    "description": "Improves Netflix UI",

    "icons": {

    },

    "content_scripts": [
        {
            "matches": ["*://www.netflix.com/browse", "*://netflix.com/browse"],
            "js": ["betterflix.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],

    "applications": {
        "gecko": {
            "id": "betterflix@jellywx.com"
        }
    }
}